{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.16"
  },
  "fmt": {
    "proseWrap": "preserve"
  },
  "tasks": {
    "start": {
      "description": "Start the notification server on UNIX socket",
      "command": "deno run --allow-net --allow-run --allow-read --allow-write --allow-env ./server.ts"
    }
  }
}
